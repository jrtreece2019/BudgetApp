@page "/forgot-password"
@layout BudgetApp.Shared.Layout.AuthLayout

<PageTitle>Reset Password</PageTitle>

<div class="auth-page">
    <div class="auth-card">
        @if (!ShowResetForm)
        {
            <!-- Step 1: Enter email to request a reset -->
            <div class="auth-header">
                <h1 class="auth-title">Forgot Password</h1>
                <p class="auth-subtitle">Enter your email and we'll help you reset your password</p>
            </div>

            @if (!string.IsNullOrEmpty(Message))
            {
                <div class="auth-error @(IsSuccess ? "success" : "")">
                    <span class="error-icon">@(IsSuccess ? "✓" : "!")</span>
                    <span>@Message</span>
                </div>
            }

            <div class="auth-form">
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input type="email"
                           class="form-input"
                           placeholder="you@example.com"
                           @bind="Email"
                           @bind:event="oninput"
                           disabled="@IsLoading" />
                </div>

                <button class="auth-btn" @onclick="HandleForgotPassword"
                        disabled="@(!IsEmailValid || IsLoading)">
                    @if (IsLoading)
                    {
                        <span class="spinner"></span>
                        <span>Sending...</span>
                    }
                    else
                    {
                        <span>Send Reset Code</span>
                    }
                </button>
            </div>
        }
        else
        {
            <!-- Step 2: Enter reset token + new password -->
            <div class="auth-header">
                <h1 class="auth-title">Reset Password</h1>
                <p class="auth-subtitle">Enter the reset code and your new password</p>
            </div>

            @if (!string.IsNullOrEmpty(Message))
            {
                <div class="auth-error @(IsSuccess ? "success" : "")">
                    <span class="error-icon">@(IsSuccess ? "✓" : "!")</span>
                    <span>@Message</span>
                </div>
            }

            <div class="auth-form">
                <div class="form-group">
                    <label class="form-label">Reset Code</label>
                    <input type="text"
                           class="form-input"
                           placeholder="Paste reset code here"
                           @bind="ResetToken"
                           @bind:event="oninput"
                           disabled="@IsLoading" />
                </div>

                <div class="form-group">
                    <label class="form-label">New Password</label>
                    <input type="password"
                           class="form-input"
                           placeholder="At least 8 characters"
                           @bind="NewPassword"
                           @bind:event="oninput"
                           disabled="@IsLoading" />
                </div>

                <div class="form-group">
                    <label class="form-label">Confirm Password</label>
                    <input type="password"
                           class="form-input"
                           placeholder="Re-enter your password"
                           @bind="ConfirmPassword"
                           @bind:event="oninput"
                           disabled="@IsLoading" />
                </div>

                @if (NewPassword.Length > 0 && ConfirmPassword.Length > 0 && NewPassword != ConfirmPassword)
                {
                    <div class="auth-error">
                        <span class="error-icon">!</span>
                        <span>Passwords don't match.</span>
                    </div>
                }

                <button class="auth-btn" @onclick="HandleResetPassword"
                        disabled="@(!IsResetValid || IsLoading)">
                    @if (IsLoading)
                    {
                        <span class="spinner"></span>
                        <span>Resetting...</span>
                    }
                    else
                    {
                        <span>Reset Password</span>
                    }
                </button>
            </div>
        }

        <div class="auth-footer">
            <span class="auth-footer-text">Remember your password?</span>
            <a href="/login" class="auth-link">Sign in</a>
        </div>
    </div>
</div>
