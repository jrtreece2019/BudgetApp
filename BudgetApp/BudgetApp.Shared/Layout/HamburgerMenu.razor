                </a>

                <div class="menu-divider"></div>

                <!-- Theme Toggle -->
                <div class="menu-item theme-toggle" @onclick="ToggleTheme">
                    <span class="menu-item-icon">@(ThemeService.IsDarkMode ? "ğŸŒ™" : "â˜€ï¸")</span>
                    <span class="menu-item-label">@(ThemeService.IsDarkMode ? "Dark Mode" : "Light Mode")</span>
                    <div class="toggle-switch @(ThemeService.IsDarkMode ? "dark" : "light")">
                        <div class="toggle-knob"></div>
                    </div>
                </div>
            </div>
        </nav>
    }
</div>

@code {
    private bool IsOpen { get; set; }
    private string CurrentPath => new Uri(Navigation.Uri).AbsolutePath;

    private void ToggleMenu()
    {
        IsOpen = !IsOpen;
    }

    private void CloseMenu()
    {
        IsOpen = false;
    }

    private void ToggleTheme()
    {
        ThemeService.ToggleTheme();
    }

    private bool IsActive(string path)
    {
        if (path == "/")
        {
            return CurrentPath == "/" || CurrentPath == "";
        }
        return CurrentPath.StartsWith(path, StringComparison.OrdinalIgnoreCase);
    }
}
