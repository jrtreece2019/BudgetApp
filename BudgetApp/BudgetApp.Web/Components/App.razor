<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <ResourcePreloader />
    <link rel="stylesheet" href="_content/BudgetApp.Shared/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="_content/BudgetApp.Shared/app.css" />
    <link rel="stylesheet" href="BudgetApp.Web.styles.css" />
    <ImportMap />
    <link rel="icon" type="image/png" href="_content/BudgetApp.Shared/favicon.png" />
    <HeadOutlet @rendermode="InteractiveServer" />
</head>

<body>
    <Routes @rendermode="InteractiveServer" />
    <ReconnectModal />
    <script src="_content/BudgetApp.Shared/theme.js"></script>
    <script>
        // Apply saved theme immediately to prevent flash of wrong theme (FOUC).
        // Reads localStorage before Blazor boots so the correct CSS class is on
        // the root element from the very first paint.
        (function() {
            var theme = localStorage.getItem('app-theme') || 'dark';
            document.documentElement.classList.add('theme-' + theme);
        })();
    </script>
    <!-- Plaid Link SDK: renders the bank login UI widget -->
    <script src="https://cdn.plaid.com/link/v2/stable/link-initialize.js"></script>
    <!-- Our JS interop bridge between Blazor and Plaid Link -->
    <script src="_content/BudgetApp.Shared/plaid-link.js"></script>
    <!-- CSV/file download helper for export feature -->
    <script src="_content/BudgetApp.Shared/file-download.js"></script>
    <script src="@Assets["_framework/blazor.web.js"]"></script>
</body>

</html>
